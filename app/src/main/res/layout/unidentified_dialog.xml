<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/unidentified_result_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Results"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="20dp"/>
            <ImageView
                android:id="@+id/unIdentified_goBack"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/close_page"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="230dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/unidentified_png"
        android:layout_width="320dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/unidentified_result_bar"
        android:layout_marginTop="100dp"
        android:src="@drawable/unidentified" />
    <TextView
        android:id="@+id/unidentified_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Unidentified"
        android:layout_below="@id/unidentified_png"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/unIdentified_okay_btn"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_below="@+id/unidentified_textview"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#182153"
        android:text="OKAY"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/unIdentified_askExpert_btn"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/unIdentified_okay_btn"
        android:layout_marginStart="210dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/btn_border"
        android:text="ASK EXPERT"
        android:textColor="@color/appTheme1"
        android:textSize="20sp"
        />


</RelativeLayout>